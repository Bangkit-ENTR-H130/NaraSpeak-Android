<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NaraSpeak"
        tools:targetApi="31">
        <activity
            android:name=".CallActivity"
            android:exported="false" />
        <activity
            android:name=".ui.groupcall.GroupCallActivity"
            android:exported="false" />
        <activity
            android:name=".ui.videocall.VideoCallActivity"
            android:exported="false" />
        <activity
            android:name=".ui.result.CompleteSessionActivity"
            android:exported="false" />
        <activity
            android:name=".ui.result.ResultActivity"
            android:exported="false" />
        <activity
            android:name=".ui.shop.ShopActivity"
            android:exported="false" />
        <activity
            android:name=".ui.homepage.HomepageActivity"
            android:exported="false"
            android:theme="@style/Theme.NaraSpeak.Appbar" />
        <activity
            android:name=".ui.datafill.DataFillActivity"
            android:exported="false" />
        <activity
            android:name=".ui.verification.OtpActivity"
            android:exported="false" />
        <activity
            android:name=".ui.register.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".ui.landingpage.MainActivity"
            android:exported="false" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".ui.landingpage.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>