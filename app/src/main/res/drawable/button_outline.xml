<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/secondary_1"/>
            <stroke
                android:width="1dp"
                android:color="@color/accent_orange">
            </stroke>
            <corners android:radius="20dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/primary_1"/>
            <stroke
               android:width="2dp"
               android:color="@color/accent_orange">
           </stroke>
            <corners android:radius="20dp" />
        </shape>
    </item>
</selector>
