<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_1"
    app:layoutDescription="@xml/activity_main_scene"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/landing_back"
        android:layout_width="match_parent"
        android:layout_height="492dp"
        android:background="@drawable/frame_121"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/btn_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/baseline_language_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/baseline_account_circle_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/img_menu_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_marginHorizontal="16dp"
        android:src="@drawable/home_phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_bold"
        android:text="Welcome to NaraSpeak"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/img_menu_1"
        app:layout_constraintStart_toStartOf="@id/img_menu_1"
        app:layout_constraintTop_toBottomOf="@id/img_menu_1" />

    <TextView
        android:id="@+id/desc_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:textAlignment="center"
        android:text="Lets get started to have a session with stranger and we are gonna check for  your grammar."
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/img_menu_1"
        app:layout_constraintStart_toStartOf="@id/img_menu_1"
        app:layout_constraintTop_toBottomOf="@id/title_1" />

    <ImageView
        android:id="@+id/img_menu_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/home_robot"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_bold"
        android:text="Learn with AI Correction"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_menu_2"
        app:layout_constraintStart_toStartOf="@+id/img_menu_2"
        app:layout_constraintTop_toBottomOf="@id/img_menu_2" />

    <TextView
        android:id="@+id/desc_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:textAlignment="center"
        android:text="Start a conversation with a fellow learner to increase your speaking and grammar skills with the help of AI."
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/title_2"
        app:layout_constraintStart_toStartOf="@+id/title_2"
        app:layout_constraintTop_toBottomOf="@id/title_2" />

    <ImageView
        android:id="@+id/img_menu_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/home_guide"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_bold"
        android:text="Rules and Guidance"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_menu_3"
        app:layout_constraintStart_toStartOf="@+id/img_menu_3"
        app:layout_constraintTop_toBottomOf="@id/img_menu_3" />

    <TextView
        android:id="@+id/desc_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:textAlignment="center"
        android:text="Please be nice and polite to each other. We will record your video call session for transcripting."
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/title_3"
        app:layout_constraintStart_toStartOf="@+id/title_3"
        app:layout_constraintTop_toBottomOf="@id/title_3" />



    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/dot_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        app:crossfade="1"
        app:altSrc="@drawable/dot_active"
        app:srcCompat="@drawable/dot_inactive"
        app:layout_constraintEnd_toStartOf="@+id/dot_2"
        app:layout_constraintTop_toTopOf="@+id/dot_2" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/dot_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:crossfade="0"
        app:altSrc="@drawable/dot_active"
        app:srcCompat="@drawable/dot_inactive"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/dot_3"
        android:layout_width="5dp"
        android:layout_height="7dp"
        android:layout_marginHorizontal="4dp"
        app:altSrc="@drawable/dot_active"
        app:crossfade="0"
        app:layout_constraintStart_toEndOf="@id/dot_2"
        app:layout_constraintTop_toTopOf="@+id/dot_2"
        app:srcCompat="@drawable/dot_inactive" />


    <TextView
        android:id="@+id/tv_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:text="Skip"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btn_next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_next" />


    <com.belajar.naraspeak.ui.customview.CustomButton
        android:id="@+id/btn_next"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="60dp"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.belajar.naraspeak.ui.customview.CustomButton
        android:id="@+id/btn_start"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Get Started"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="607dp" />


</androidx.constraintlayout.motion.widget.MotionLayout>