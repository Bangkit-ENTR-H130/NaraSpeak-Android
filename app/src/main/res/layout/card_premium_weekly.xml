<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/accent_black"
    android:layout_gravity="center"
    app:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="326dp"
        android:layout_height="164dp">

        <ImageView
            android:id="@+id/card_foreground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/card_foreground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_packet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weekly"
            android:textColor="@color/secondary_1"
            style="@style/TextStyle.Headline3.Bold"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp.50.000"
            android:textColor="@color/secondary_1"
            style="@style/TextStyle.Headline3"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_packet"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/iv_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:src="@drawable/baseline_star_24"
            app:layout_constraintBottom_toBottomOf="@id/card_foreground"
            app:layout_constraintStart_toStartOf="@id/card_foreground"
            app:layout_constraintTop_toTopOf="@id/card_foreground"
            app:layout_constraintVertical_bias="0.2" />

        <TextView
            android:id="@+id/tv_get_feature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get these feature!"
            android:textColor="@color/secondary_1"
            style="@style/TextStyle.Body.Bold"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@id/iv_star"
            app:layout_constraintBottom_toBottomOf="@id/iv_star"
            app:layout_constraintStart_toEndOf="@id/iv_star"/>

        <TextView
            android:id="@+id/tv_monthly_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/lorem"
            style="@style/TextStyle.Body"
            android:textColor="@color/secondary_1"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_get_feature"
            app:layout_constraintStart_toStartOf="@id/iv_star"/>

        <TextView
            android:id="@+id/tv_monthly_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/lorem"
            style="@style/TextStyle.Body"
            android:textColor="@color/secondary_1"
            app:layout_constraintTop_toBottomOf="@id/tv_monthly_1"
            app:layout_constraintStart_toStartOf="@id/iv_star"/>

        <TextView
            android:id="@+id/tv_monthly_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/lorem"
            style="@style/TextStyle.Body"
            android:textColor="@color/secondary_1"
            app:layout_constraintTop_toBottomOf="@id/tv_monthly_2"
            app:layout_constraintStart_toStartOf="@id/iv_star"/>

        <ImageView
            android:id="@+id/selected_indicator"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/baseline_star_24"
            android:background="@color/secondary_6"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>