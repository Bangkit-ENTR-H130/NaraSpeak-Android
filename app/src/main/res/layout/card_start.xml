<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:cardCornerRadius="20dp"
    android:backgroundTint="@color/secondary_6">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_start_normal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/TextStyle.Body.Bold"
            android:textColor="@color/primary_1"
            android:text="Start with Grammar Correction!"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/line_separate"
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="@color/primary_1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_start_normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_start_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chilling with Anybody"
            style="@style/TextStyle.Body.Bold"
            android:textColor="@color/primary_1"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_start_normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>