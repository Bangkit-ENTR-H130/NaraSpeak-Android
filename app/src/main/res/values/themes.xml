<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NaraSpeak" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor">@color/secondary_3</item>
        <item name="android:textColor">@color/accent_black</item>

    </style>

    <style name="Theme.NaraSpeak" parent="Base.Theme.NaraSpeak" />

    <style name="Theme.NaraSpeak.Appbar" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textColor">@color/accent_black</item>
        <item name="android:lineBreakStyle" tools:targetApi="tiramisu">none</item>

    </style>

    <!--TEXT STYLE-->
    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextStyle.Title">
        <item name="android:textSize">30sp</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="TextStyle.Title.Bold">
        <item name="android:textSize">30sp</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="TextStyle.Headline1">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="TextStyle.Headline1.Bold">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="TextStyle.Headline2">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="TextStyle.Headline2.Bold">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="TextStyle.Headline3">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="TextStyle.Headline3.Bold">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="TextStyle.Body">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="TextStyle.Body.Bold">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="TextStyle.Caption">
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="TextStyle.Caption.Bold">
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>
    <!--TEXT STYLE-->


    <style name="Item.IndicatorActive" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/secondary_6</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

</resources>